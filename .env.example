# Analog Quest Environment Variables Template
# Copy this to .env.local and fill in your values

# ==============================================
# DATABASE CONNECTION
# ==============================================
# Choose ONE of the following database providers:

# Option 1: Neon (Recommended by Vercel)
# Sign up at: https://neon.tech
DATABASE_URL=postgresql://[user]:[password]@[host]/[database]?sslmode=require

# Option 2: Supabase
# Sign up at: https://supabase.com
SUPABASE_URL=https://[project-id].supabase.co
SUPABASE_ANON_KEY=[your-anon-key]
SUPABASE_SERVICE_KEY=[your-service-key]

# Option 3: Vercel Postgres (Deprecated but works)
# Set up through Vercel Dashboard
POSTGRES_URL=postgres://[user]:[password]@[host]/[database]?sslmode=require
POSTGRES_PRISMA_URL=postgres://[user]:[password]@[host]/[database]?pgbouncer=true&sslmode=require
POSTGRES_URL_NON_POOLING=postgres://[user]:[password]@[host]/[database]?sslmode=require
POSTGRES_USER=default
POSTGRES_HOST=[host]
POSTGRES_PASSWORD=[password]
POSTGRES_DATABASE=verceldb

# Option 4: Custom PostgreSQL
# Any PostgreSQL provider (DigitalOcean, Railway, etc.)
DATABASE_URL=postgresql://[user]:[password]@[host]:[port]/[database]

# ==============================================
# API CONFIGURATION
# ==============================================
# Feature flags for gradual migration
USE_DATABASE=false  # Set to true when database is ready
ENABLE_WRITE_OPS=false  # Set to true to enable POST/PUT/DELETE
API_VERSION=1.0.0

# ==============================================
# AUTHENTICATION (Future)
# ==============================================
# For protecting write operations
API_SECRET_KEY=  # Generate with: openssl rand -hex 32
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=  # Generate with: openssl rand -hex 32

# ==============================================
# DEVELOPMENT
# ==============================================
# Only for local development
NODE_ENV=development
DEBUG=false

# ==============================================
# NOTES
# ==============================================
# 1. Never commit .env.local to git
# 2. Add production values through Vercel Dashboard
# 3. Test database connection with /api/health endpoint
# 4. Start with USE_DATABASE=false until migration complete